formulas:
  title: link(file, file.name)
  modified: file.mtime.format("dd DD.MM.YYYY HH:mm:ss")
views:
  - type: table
    name: "Recently Modified"
    order:
      - formula.modified
      - file.folder
      - formula.title
    sort:
      - property: file.mtime
        direction: DESC  
    limit: 20
    columnSize:
      file.mtime: 185